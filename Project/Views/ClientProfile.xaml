<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.ClientProfile"
             xmlns:ActivityControl="clr-namespace:Project.Controls"
             BackgroundColor="#F5F5DC"
             x:Name="this">

    <ContentPage.Content>
        <Grid>
            <Grid RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Main content -->
                <StackLayout Padding="20">
                    <!-- Profile Picture and Name -->
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,*" VerticalOptions="Start" Margin="0,0,0,20">
                        <Frame Grid.RowSpan="3" BorderColor="Transparent" BackgroundColor="Transparent" CornerRadius="60" HeightRequest="80" WidthRequest="80" Padding="0">
                            <Image x:Name="ProfilePic" Aspect="Fill" />
                        </Frame>
                        <Label Grid.Row="0" Grid.Column="1" x:Name="FullNameLabel" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                        <Label Grid.Row="1" Grid.Column="1" x:Name="UsernameLabel" FontSize="16" TextColor="Black"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="Client" FontSize="16" TextColor="Black"/>

                        <StackLayout Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="Start" Margin="0,0,0,0" IsVisible="{Binding _IsAdmin}">
                            <Button Text="Chat" BackgroundColor="#8a3ab9" TextColor="White" FontSize="9" FontAttributes="Bold" WidthRequest="60" HeightRequest="30" CornerRadius="15" Clicked="ChatButton_Clicked"/>
                            <Button Text="Logout" BackgroundColor="#8a3ab9" TextColor="White" FontSize="9" FontAttributes="Bold" WidthRequest="60" HeightRequest="30" CornerRadius="15" Clicked="LogoutButton_Clicked"/>
                        </StackLayout>
                    </Grid>

                    <!-- Followers Count -->
                    <StackLayout Orientation="Horizontal" Margin="0,0,0,20">
                        <Label Text="Followers: " FontSize="16" FontAttributes="Bold" />
                        <Label x:Name="FollowersCountLabel" FontSize="16" TextColor="#8a3ab9" VerticalOptions="Center" Margin="0,0,10,0" />
                        <Label Text="Click to view" FontSize="16" TextColor="#8a3ab9" VerticalOptions="Center" Margin="0,0,10,0" IsVisible="False" />
                    </StackLayout>

                    <!-- Find Freelancer Section -->
                    <Label Text="Find Freelancers" FontSize="24" FontAttributes="Bold" Margin="0,20,0,10" IsVisible="{Binding _IsAdmin}"/>
                    <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="FillAndExpand" IsVisible="{Binding _IsAdmin}">
                        <!-- Dropdown for selecting freelancer type -->
                        <StackLayout Margin="20,0" x:Name="FreelancerTypeStack" IsVisible="True">
                            <Label Text="Type of Freelancer" TextColor="Red"/>
                            <Picker x:Name="FreelancerTypePicker" Title="Select Freelancer Type">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Graphic Designer</x:String>
                                        <x:String>Web Developer</x:String>
                                        <x:String>Content Writer</x:String>
                                        <x:String>Social Media Manager</x:String>
                                        <x:String>SEO Specialist</x:String>
                                        <x:String>Virtual Assistant</x:String>
                                        <x:String>Photographer</x:String>
                                        <x:String>Video Editor</x:String>
                                        <x:String>Copywriter</x:String>
                                        <x:String>Translator</x:String>
                                        <x:String>Other</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </StackLayout>

                        <!-- Entry for other freelancer type -->
                        <StackLayout Margin="20,0" x:Name="OtherFreelancerTypeStack" IsVisible="False">
                            <Label Text="Please specify *" TextColor="Red"/>
                            <Entry Placeholder="Freelancer Type" FontSize="16" x:Name="OtherFreelancerTypeEntry" PlaceholderColor="Red"/>
                        </StackLayout>

                        <!-- Search button -->
                        <Button Text="Search" BackgroundColor="#8a3ab9" TextColor="White" CornerRadius="20" FontAttributes="Bold" FontSize="18" Margin="0,40,0,10" Clicked="SearchButton_Clicked" IsVisible="{Binding _IsAdmin}"/>
                    </StackLayout>
