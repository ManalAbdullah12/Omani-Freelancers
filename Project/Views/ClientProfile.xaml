                </StackLayout>


                <StackLayout Grid.Row="1" Orientation="Horizontal" BackgroundColor="#8a3ab9" Spacing="0" HorizontalOptions="FillAndExpand" IsVisible="{Binding _IsAdmin}">
                    <Label x:Name="SettingsTabLabel" Text="My Account" TextColor="White" FontSize="16" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_3"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView BackgroundColor="#F5F5DC" WidthRequest="1" VerticalOptions="FillAndExpand" />
                    <Label Text="Request Jobs" TextColor="White" FontSize="16" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView BackgroundColor="#F5F5DC" WidthRequest="1" VerticalOptions="FillAndExpand" />
                    <Label Text="Current Jobs" TextColor="White" FontSize="16" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_1"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView BackgroundColor="#F5F5DC" WidthRequest="1" VerticalOptions="FillAndExpand" />
                    <Label Text="Payment Info" TextColor="White" FontSize="16" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_4"></TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </Grid>
            <ActivityControl:Loader x:Name="IsBusy" IsVisible="false"></ActivityControl:Loader>
        </Grid>
    </ContentPage.Content>
</ContentPage>
